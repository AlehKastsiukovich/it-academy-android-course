<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp">

    <TextView
        android:id="@+id/androidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/user_avatar_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/androidText"
        android:background="@android:color/darker_gray" />


    <TextView
        android:id="@+id/postsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/_125"
        android:layout_toEndOf="@id/user_avatar_image"
        android:layout_marginStart="30dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/followersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:layout_toStartOf="@+id/followingCount"
        android:layout_toRightOf="@id/postsCount"
        android:text="@string/_20k"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/followingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:text="@string/_22"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postsCount"
        android:layout_alignStart="@id/postsCount"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="4dp"
        android:text="@string/posts"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followersCount"
        android:layout_alignLeft="@id/followersCount"
        android:layout_marginLeft="-33dp"
        android:layout_marginTop="4dp"
        android:text="Followers"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/following"
        android:layout_width="76dp"
        android:layout_height="23dp"
        android:layout_below="@id/followingCount"
        android:layout_alignLeft="@+id/followingCount"
        android:layout_marginLeft="-31dp"
        android:layout_marginTop="4dp"
        android:text="Following"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/username"
        android:layout_below="@+id/user_avatar_image"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/addressDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/address_description"
        android:layout_below="@id/userName"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/smallPic1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addressDescription"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/smallPic2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/smallPic1"
        android:layout_below="@+id/addressDescription"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/smallPic3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/smallPic2"
        android:layout_below="@+id/addressDescription"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/smallPic4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/smallPic3"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/addressDescription"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/smallPic5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/smallPic4"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/addressDescription"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/smallPic6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/smallPic5"
        android:layout_below="@+id/addressDescription"
        android:background="@android:color/darker_gray" />


    <ImageView
        android:id="@+id/direction_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/smallPic1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/directions_vector" />

    <TextView
        android:id="@+id/directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/direction_image"
        android:layout_alignParentStart="true"
        android:text="@string/directions" />

    <ImageView
        android:id="@+id/call_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/smallPic4"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/directions"
        android:src="@drawable/call_vector" />

    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_image"
        android:layout_alignStart="@+id/call_image"
        android:layout_alignEnd="@+id/call_image"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-13dp"
        android:layout_toEndOf="@+id/directions"
        android:text="@string/call" />

    <ImageView
        android:id="@+id/star_image"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_below="@id/smallPic5"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@id/call_image"
        android:src="@drawable/star_vector" />

    <TextView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/star_image"
        android:layout_alignStart="@+id/star_image"
        android:layout_marginStart="9dp"
        android:layout_marginTop="3dp"
        android:text="@string/save" />

    <ImageView
        android:id="@+id/website_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/smallPic1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/website_vector" />

    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/website_image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/website" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/directions"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/bigPic1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/bigPic2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/bigPic3"
        android:layout_toEndOf="@+id/bigPic1"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/bigPic3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />

</RelativeLayout>