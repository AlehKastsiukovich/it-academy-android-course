<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contactTypeImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:contentDescription="@string/type_of_contact"
        android:src="@drawable/ic_baseline_contact_mail_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_text"
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/contactTextView"
        app:layout_constraintLeft_toRightOf="@+id/contactTypeImageView"
        app:layout_constraintTop_toTopOf="@+id/contactTypeImageView"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/contactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_text"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/contactTypeImageView"
        app:layout_constraintLeft_toRightOf="@+id/contactTypeImageView"
        app:layout_constraintTop_toBottomOf="@+id/contactNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>